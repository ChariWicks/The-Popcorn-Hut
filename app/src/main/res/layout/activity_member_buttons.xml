<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.charitha.popcornhut.member_buttons"
    android:background="#000000">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="-47dp"
        android:title="@string/app_name"
        android:titleTextColor="#d60e0e"/>

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:orientation="vertical"
        android:paddingTop="110dp"
        android:weightSum="1"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">


        <Button
            android:id="@+id/buttonAddMember"
            android:layout_width="@android:dimen/thumbnail_height"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:background="@android:color/holo_red_light"
            android:text="Add member"
            android:textColor="#ffffff" />


        <Button
            android:id="@+id/buttonSearchMember"
            android:layout_width="@android:dimen/thumbnail_width"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:layout_marginStart="20dp"
            android:background="@android:color/holo_red_light"
            android:clickable="true"
            android:text="Search member"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/buttonEditMember"
            android:layout_width="@android:dimen/thumbnail_width"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:layout_marginStart="20dp"
            android:background="@android:color/holo_red_light"
            android:clickable="true"
            android:text="Edit member"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/buttonDeleteMember"
            android:layout_width="@android:dimen/thumbnail_width"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:background="@android:color/holo_red_light"
            android:clickable="true"
            android:text="Delete member"
            android:textColor="#ffffff" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>