<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.charitha.popcornhut.add_movie"
    android:background="#000000">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="-47dp"
        android:title="@string/app_name"
        android:titleTextColor="#d60e0e"/>

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:orientation="vertical"
        android:paddingTop="110dp"
        android:weightSum="1"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <EditText
            android:id="@+id/txtMovieName"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittextstyle"
            android:hint="Movie name"
            android:textColor="#fff"
            android:textColorHint="#aaa" />

        <EditText
            android:id="@+id/txtMovieGenre"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittextstyle"
            android:hint="Genre"
            android:textColor="#fff"
            android:textColorHint="#aaa" />

        <EditText
            android:id="@+id/txtMovieLanguage"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittextstyle"
            android:hint="Language"
            android:textColor="#fff"
            android:textColorHint="#aaa" />

        <EditText
            android:id="@+id/txtMovieRelease"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittextstyle"
            android:hint="Year of release"
            android:textColor="#fff"
            android:textColorHint="#aaa" />

        <EditText
            android:id="@+id/txtMovieDuration"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittextstyle"
            android:hint="Duration"
            android:textColor="#fff"
            android:textColorHint="#aaa" />

        <EditText
            android:id="@+id/txtMovieDirector"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittextstyle"
            android:hint="Director"
            android:textColor="#fff"
            android:textColorHint="#aaa" />

        <EditText
            android:id="@+id/txtMovieMale"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittextstyle"
            android:hint="Male lead"
            android:textColor="#fff"
            android:textColorHint="#aaa" />

        <EditText
            android:id="@+id/txtMovieFemale"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittextstyle"
            android:hint="Female lead"
            android:textColor="#fff"
            android:textColorHint="#aaa" />


        <Button
            android:id="@+id/buttonAddMovieDB"
            android:layout_width="@android:dimen/thumbnail_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:layout_marginStart="50dp"
            android:background="@android:color/holo_red_light"
            android:text="Add movie"
            android:textColor="#ffffff" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
