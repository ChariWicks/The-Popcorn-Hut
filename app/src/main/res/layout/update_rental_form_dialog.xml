<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextRentMovNa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Movie Name" />


    <EditText
        android:id="@+id/editTextRentMemE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Member Email" />


    <EditText
        android:id="@+id/editTextIssueD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Issue Date" />


    <EditText
        android:id="@+id/editTextDueD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Due Date" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonUpdateRental"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Update Rental" />

    </LinearLayout>

</LinearLayout>